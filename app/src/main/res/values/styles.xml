<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DayButton">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_day_unselected</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginEnd">3dp</item>  <!-- 여백 줄이기 -->
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TabButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#E0E0E0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>