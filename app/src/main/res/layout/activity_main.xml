            <!--            </androidx.constraintlayout.widget.ConstraintLayout>-->

            <!-- 즐겨찾기 버튼 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nav_self_diagnosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/nav_doctor"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/nav_self_diagnosis_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_recommand_deactivated"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nav_self_diagnosis_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="자가진단"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/nav_self_diagnosis_icon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 프로필 버튼 -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>